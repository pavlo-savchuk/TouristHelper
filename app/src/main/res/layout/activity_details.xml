<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_details"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="ua.com.lviv.fly.touristhelper.ui.activity.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Інтернет сторінка"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/webSite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Назва"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Телефон"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/telephone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Найдешевша послуга"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/cheapestService"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Найдорожча послуга"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/mostExpensiveService"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Адреса"
                    app:customFont="@string/bold"
                    android:id="@+id/fontTextView" />

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Інформація"
                    app:customFont="@string/bold"/>

                <ua.com.lviv.fly.touristhelper.views.FontTextView
                    android:id="@+id/info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/no_information"
                    app:customFont="@string/light"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="ua.com.lviv.fly.touristhelper.MapsActivity"/>
</LinearLayout>
