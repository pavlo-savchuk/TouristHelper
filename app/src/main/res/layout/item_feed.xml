<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="@dimen/padding">

    <ua.com.lviv.fly.touristhelper.views.FontTextView
        android:id="@+id/name"
        android:text="name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customFont="@string/bold"/>

    <ua.com.lviv.fly.touristhelper.views.FontTextView
        android:id="@+id/location"
        android:text="location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customFont="@string/light"
        android:textSize="12sp"
        />
    <ua.com.lviv.fly.touristhelper.views.FontTextView
        android:id="@+id/telephone"
        android:text="telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:customFont="@string/italic"/>

    <ua.com.lviv.fly.touristhelper.views.FontTextView
        android:id="@+id/info"
        android:text="info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customFont="@string/regular"/>

    <ua.com.lviv.fly.touristhelper.views.FontTextView
        android:id="@+id/cheapestService"
        android:text="cheapestService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customFont="@string/light"
        android:textSize="12sp"
        />

</LinearLayout>